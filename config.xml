<?xml version='1.0' encoding='utf-8'?>
<widget id="fyi.robo.robo" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Robo</name>
    <description>
        A multi-platform portable app for querying and controlling a Robo C2 or R2 printer made by Robo 3D.
    </description>
    <author email="support@robo.fyi" href="http://robo.fyi">
        Robo.fyi Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*:*.local" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <allow-nagivation href="*://*.robo3d.com/*" />
    <allow-nagivation href="*.local" />
    <engine name="ios" spec="~4.5.3" />
    <engine name="browser" spec="~5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.3.0" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
