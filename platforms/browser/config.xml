<?xml version='1.0' encoding='utf-8'?>
<widget id="fyi.robo.robo" version="1.1.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Robo</name>
    <description>
        A multi-platform portable app for querying and controlling a Robo C2 or R2 printer made by Robo 3D.
    </description>
    <author email="support@robo.fyi" href="http://robo.fyi">
        Robo.fyi Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*:*.local" />
    <allow-nagivation href="*://*.robo3d.com/*" />
    <allow-nagivation href="*.local" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
